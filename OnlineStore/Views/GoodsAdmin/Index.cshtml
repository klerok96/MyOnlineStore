@model PagedList.IPagedList<OnlineStore.Models.StoreDB.Goods>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Товары";
}

<h2>@ViewBag.Genre</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>Нименование товара</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Видимость</th>
        <th></th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        using (Html.BeginForm("AddToBasket", "Basket"))
        {
            @Html.Hidden("id", item.ProductId, new { @id = "id" })
            <tr>
                <td>
                    @Html.ActionLink(item.ProductName, "Details", new { id = item.ProductId })
                <td>
                    @item.Price.ToString("# руб")
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Quantity, null, "quantity", new { htmlAttributes = new { @min = "1", @max = "20", @class = "form-control", @Value = "1" } })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visibility)
                </td>
                <td>
                    <input type="submit" value="В корзину" class="btn btn-default" />
                </td>
                <td>
                    @Html.ActionLink("Редактирвоать", "Edit", new { id = item.ProductId }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.ProductId })
                </td>
            </tr>
        }
    }

</table>

Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))